<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:shrinkColumns="*">
        <TableRow>
            <include android:id="@+id/c0" layout="@layout/carta"></include>
            <include android:id="@+id/c1" layout="@layout/carta"></include>
            <include android:id="@+id/c2" layout="@layout/carta"></include>
            <include android:id="@+id/c3" layout="@layout/carta"></include>
        </TableRow>
        <TableRow>
            <include android:id="@+id/c4" layout="@layout/carta"></include>
            <include android:id="@+id/c5" layout="@layout/carta"></include>
            <include android:id="@+id/c6" layout="@layout/carta"></include>
            <include android:id="@+id/c7" layout="@layout/carta"></include>
        </TableRow>
        <TableRow>
            <include android:id="@+id/c8" layout="@layout/carta"></include>
            <include android:id="@+id/c9" layout="@layout/carta"></include>
            <include android:id="@+id/c10" layout="@layout/carta"></include>
            <include android:id="@+id/c11" layout="@layout/carta"></include>
        </TableRow>
        <TableRow>
            <include android:id="@+id/c12" layout="@layout/carta"></include>
            <include android:id="@+id/c13" layout="@layout/carta"></include>
            <include android:id="@+id/c14" layout="@layout/carta"></include>
            <include android:id="@+id/c15" layout="@layout/carta"></include>
        </TableRow>
    </TableLayout>
<Button
    android:id="@+id/restart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Restart"/>
</LinearLayout>